<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page"
    android:orientation="vertical">
    <!--消息页面-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <RadioButton
            android:id="@+id/message_unread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/message_unread"
            android:textColor="@color/gray" />

        <RadioButton
            android:id="@+id/message_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/message_read"
            android:textColor="@color/gray" />

        <RadioButton
            android:id="@+id/message_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/message_all"
            android:textColor="@color/gray" />
    </RadioGroup>

    <include
        layout="@layout/activity_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>